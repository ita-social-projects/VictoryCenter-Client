{
    "name": "victory-center",
    "version": "0.1.0",
    "private": true,
    "engines": {
        "node": ">=20"
    },
    "dependencies": {
        "@fontsource/mulish": "^5.2.5",
        "@testing-library/dom": "^10.4.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^13.5.0",
        "@types/jest": "^27.5.2",
        "@types/node": "^16.18.126",
        "axios": "^1.10.0",
        "classnames": "^2.5.1",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-router-dom": "^7.5.3",
        "react-scripts": "5.0.1",
        "sass": "^1.87.0",
        "ts-node": "^10.9.2",
        "typescript": "^4.9.5",
        "web-vitals": "^2.1.4"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "test:cover": "npm test -- --coverage --watchAll=false",
        "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore --max-warnings 10",
        "lint:fix": "eslint --fix",
        "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,scss,md,json}' --config ./.prettierrc"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest",
            "plugin:prettier/recommended"
        ],
        "rules": {
            "no-console": 1,
            "no-unused-vars": 2,
            "testing-library/no-wait-for-multiple-assertions": 0,
            "testing-library/no-container": 0,
            "testing-library/no-node-access": 0
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{ts,js,tsx,jsx}"
        ],
        "coveragePathIgnorePatterns": [
            "src/utils/mock-data",
            "src/const",
            "index.tsx",
            "react-app-env.d.ts",
            "reportWebVitals.ts"
        ],
        "coverageThreshold": {
            "global": {
                "statements": 89,
                "branches": 86.2,
                "functions": 85.2,
                "lines": 88.9
            }
        }
    },
    "devDependencies": {
        "@types/react": "^19.1.3",
        "@types/react-dom": "^19.1.3",
        "@types/testing-library__react": "^10.0.1",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.5.1",
        "prettier": "^3.6.2",
        "ts-jest": "^29.3.2"
    }
}
